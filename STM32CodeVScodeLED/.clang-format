BasedOnStyle: Google  # 基于 Google 官方 C 风格
Language: Cpp
IndentWidth: 4        # 4 空格缩进（通用友好）
TabWidth: 4
UseTab: Never         # 禁用 Tab，全部用空格
BreakBeforeBraces: Allman  # 大括号单独一行
ColumnLimit: 100      # 行宽 100 字符（比内核宽松）

# 二维数组优化
BinPackArguments: false
AllowAllArgumentsOnNextLine: false
AlignArrayOfStructures: Left
BreakArrays: true

# 细节配置
SpaceAfterCStyleCast: true  # 强制转换后加空格：(int) x
SpaceBeforeParens: ControlStatements  # 控制语句后加空格：if (x)
SortIncludes: true          # 自动排序头文件（方便协作）
AllowShortBlocksOnASingleLine: false  # 禁止短代码块单行